---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

const menuitems = [
  {
    title: "Inicio",
    path: "/",
  },
  {
    title: "Precios",
    path: "/pricing",
  },
  {
    title: "Contacto",
    path: "/contact",
  },
];
---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-5">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/" class="text-lg"
          ><span class="font-bold text-slate-800">Whatsive</span>
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col justify-center lg:flex-row lg:gap-3">
          {
            menuitems.map((item, index) => (
              <li>
                <a
                  class="flex justify-center lg:px-3 py-2 text-gray-600 hover:text-gray-900"
                  href={item.path}>
                  {item.title}
                </a>
              </li>
            ))
          }
        </ul>
        <div class="lg:hidden flex items-center mt-3 gap-4">
          <Link href="https://api.whatsive.com/" size="md">Detalles de servicios</Link>
          <Link href="https://api.whatsive.com/" size="md" block>Ir a Whatsive</Link>
        </div>
      </MenuItems>
    </Astronav>
    <div>
      <div class="hidden lg:flex items-center gap-4">
        <a href="/servicios-whatsive.pdf" target="_blank">Detalles de servicios</a>
        <Link href="https://api.whatsive.com/" size="md">Ir a Whatsive</Link>
      </div>
    </div>
  </header>
</Container>
